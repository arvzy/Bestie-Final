<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
        <ImageView
                android:layout_height="wrap_content"
                android:layout_width="792.0dp"
                android:padding="12dp"
                android:layout_weight="1"
                android:src="@drawable/Floor1"
                android:id="@+id/flr1Image"
            />
            
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="792.0dp"
                android:padding="12dp"
                android:layout_weight="1"
                android:src="@drawable/mezzanine"
                android:id="@+id/mzznnImage"                
            /> 

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="792.0dp"
                android:padding="12dp"
                android:layout_weight="1"
                android:src="@drawable/floor2and4"
                android:id="@+id/flr2Image"
            /> 

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="792.0dp"
                android:padding="12dp"
                android:layout_weight="1"
                android:src="@drawable/floor3"
                android:id="@+id/flr3Image"
            /> 

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="792.0dp"
                android:padding="12dp"
                android:layout_weight="1"
                android:src="@drawable/floor2and4"
                android:id="@+id/flr4Image"
            />
    </RelativeLayout>
</LinearLayout>
