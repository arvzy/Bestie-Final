<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:hint="Search"
                android:completionThreshold="1"
                android:dropDownWidth="match_parent"
                android:dropDownHeight="wrap_content"
                android:imeOptions="actionSearch"
                android:visibility="visible"/>

            <Button
                android:id="@+id/AutoCompleteSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--Lobby First Floor-->

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/Floor1"
                    android:id="@+id/flr1Image"
                    android:visibility="visible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/AdmissionsOffice"
                    android:id="@+id/AdmissionsOfficeImage"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/Registrar"
                    android:id="@+id/RegistrarImage"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/Cashier"
                    android:id="@+id/CashierImage"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/complaba"
                    android:id="@+id/CompLabAImage"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/Deputy"
                    android:id="@+id/DeputyImage"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/maletoilet"
                    android:id="@+id/MaleToiletImage1"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/femaletoilet"
                    android:id="@+id/FemaleToiletImage1"
                    android:visibility="invisible"/>

                <!--Mezzannine-->

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/library1"
                    android:id="@+id/LibraryImage1"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/library2"
                    android:id="@+id/LibraryImage2"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/bookstore1"
                    android:id="@+id/BookstoreImage1"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/bookstore2"
                    android:id="@+id/BookstoreImage2"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/schooladmin1"
                    android:id="@+id/SchoolAdminImage1"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/schooladmin2"
                    android:id="@+id/SchoolAdminImage2"
                    android:visibility="invisible"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
