<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r"
    android:id="@+id/MainLayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/Bestie_bg"/>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150px">
                <ImageView
                    android:layout_width="120px"
                    android:layout_height="100px"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="255px"
                    android:src="@drawable/bestietransparent"/>
                <TextView
                    android:layout_width="400px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="355px"
                    android:textStyle="bold"
                    android:text="BESTIE"
                    android:textColor="@android:color/white"
                    android:textSize="100px"/>
            </RelativeLayout>


            <!--for now ung background is yan muna-->

            <AutoCompleteTextView
                android:id="@+id/searchBar"
                android:layout_width="700dp"
                android:layout_height="50dp"
                android:background="@drawable/search_design"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:textAlignment="center"
                android:hint="Search"
                android:textColorHint="@android:color/black"
                android:completionThreshold="2"
                android:dropDownWidth="match_parent"
                android:dropDownHeight="wrap_content"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:visibility="visible"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BuildingOverviewButton"
                android:layout_marginTop="5px"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:background="@drawable/button_design"
                app:cornerRadius="50px"
                style="@style/Invert"
                android:text="Building Overview"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    app:cornerRadius="50px"
                    style="@style/ButtonOve"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="240px"
                    android:layout_height="40px"
                    android:layout_marginTop="4px"
                    android:layout_marginLeft="5px"
                    android:textColor="@android:color/holo_red_light"
                    android:text="Emergency Exits"
                    app:cornerRadius="50px"
                    style="@style/Invert"
                    android:id="@+id/EmergencyExitButton"/>
            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/InstructionsButton"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                app:cornerRadius="50px"
                android:textColor="@android:color/black"
                android:background="@drawable/button_design"
                style="@style/Invert"
                android:text="Instructions"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Codeez Inc."
                android:textColor="@android:color/black"
                android:id="@+id/textView1" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="650px"
                android:layout_marginLeft="12px"
                android:background="@drawable/contact_facebook"/>

            <ImageButton
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="650px"
                android:layout_marginLeft="102px"
                android:background="@drawable/contact_gmail"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout> 