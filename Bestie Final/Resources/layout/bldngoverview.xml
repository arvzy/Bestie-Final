<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gridLayout1"
    android:background="@drawable/buildingoverviewnew">

    <RelativeLayout
        android:layout_width="1400px"
        android:layout_height="800px"
        android:layout_gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BackBuildingOview"
            android:layout_width="100px"
            android:layout_height="60px"
            app:cornerRadius="20px"
            android:layout_marginLeft="12px"
            android:textColor="@android:color/black"
            style="@style/Button"
            android:text="Back"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/BuildingAOverview"
            android:background="@drawable/Top_a"
            android:layout_width="140px"
            android:layout_height="230px"
            android:layout_marginLeft="70px"
            android:layout_marginTop="220px"
            android:text="Building A"/>

        <ImageButton
            android:id="@+id/BuildingBOverview"
            android:background="@drawable/top_b"
            android:layout_width="128px"
            android:layout_height="220px"
            android:layout_marginLeft="350px"
            android:layout_marginTop="265px"
            android:text="Building B"/>

        <ImageButton
            android:id="@+id/BuildingCOverview"
            android:background="@drawable/top_c"
            android:layout_width="128px"
            android:layout_height="220px"
            android:layout_marginLeft="625px"
            android:layout_marginTop="255px"
            android:text="Building C"/>

        <ImageButton
            android:id="@+id/BuildingDOverview"
            android:background="@drawable/top_d"
            android:layout_width="128px"
            android:layout_height="220px"
            android:layout_marginLeft="855px"
            android:layout_marginTop="230px"
            android:text="Building D"/>

    </RelativeLayout>

    <ImageButton
            android:id="@+id/BuildingAOverviewPic"
            android:background="@drawable/top_a"
            android:layout_width="128px"
            android:layout_height="220px"
            android:layout_marginLeft="855px"
            android:layout_marginTop="230px"
            android:text="Building D"/>

    <ImageButton
            android:id="@+id/BuildingBOverviewPic"
            android:background="@drawable/top_b"
            android:layout_width="128px"
            android:layout_height="220px"
            android:layout_marginLeft="855px"
            android:layout_marginTop="230px"
            android:text="Building D"/>

    <ImageButton
            android:id="@+id/BuildingCOverviewPic"
            android:background="@drawable/top_c"
            android:layout_width="128px"
            android:layout_height="220px"
            android:layout_marginLeft="855px"
            android:layout_marginTop="230px"
            android:text="Building D"/>

    <ImageButton
            android:id="@+id/BuildingDOverviewPic"
            android:background="@drawable/top_d"
            android:layout_width="128px"
            android:layout_height="220px"
            android:layout_marginLeft="855px"
            android:layout_marginTop="230px"
            android:text="Building D"/>

    <!--<ImageButton
        android:layout_width="700px"
        android:layout_height="100px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="625px"
        android:background="@drawable/emergency_exit"
    android:id="@+id/EmergencyExitButton"/>-->


</RelativeLayout>
