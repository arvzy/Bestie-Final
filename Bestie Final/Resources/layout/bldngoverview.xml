<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gridLayout1"
    android:background="@drawable/topviewbuilding">

    <RelativeLayout
        android:layout_width="1400px"
        android:layout_height="800px"
        android:layout_gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BackBuildingOview"
            android:layout_width="100px"
            android:layout_height="60px"
            app:cornerRadius="20px"
            android:layout_marginLeft="12px"
            android:textColor="@android:color/black"
            style="@style/Button"
            android:text="Back"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/BuildingAOverview"
            android:background="@drawable/Top_a"
            android:layout_width="295px"
            android:layout_height="332px"
            android:layout_marginLeft="72px"
            android:layout_marginTop="130px"
            android:text="Building A"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/BuildingBOverview"
            android:background="@drawable/top_b"
            android:layout_width="167px"
            android:layout_height="290px"
            android:layout_marginLeft="364px"
            android:layout_marginTop="165px"
            android:text="Building B"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/BuildingCOverview"
            android:background="@drawable/top_c"
            android:layout_width="185px"
            android:layout_height="402px"
            android:layout_marginLeft="505px"
            android:layout_marginTop="63px"
            android:text="Building C"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/BuildingDOverview"
            android:background="@drawable/top_d"
            android:layout_width="325px"
            android:layout_height="298px"
            android:layout_marginLeft="687px"
            android:layout_marginTop="164px"
            android:text="Building D"/>

    </RelativeLayout>

    <ImageButton
        android:layout_width="700px"
        android:layout_height="100px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="625px"
        android:background="@drawable/emergency_exit"/>


</RelativeLayout>
